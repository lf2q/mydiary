<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/dc_bg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:background="@color/blue">

                <TextView
                    android:id="@+id/dc_title"
                    android:paddingLeft="24dp"
                    android:textSize="18dp"
                    tools:text="联系人"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/dc_close"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="18dp"
                    android:src="@mipmap/ic_close"
                    android:tint="@color/white"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">

                <com.lfq.diary.home.content.phone.ContactHeadImage
                    android:layout_gravity="center"
                    android:layout_width="64dp"
                    android:layout_height="64dp" />

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:textSize="16dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        tools:text="name"
                        android:textColor="@color/black"
                        android:id="@+id/dc_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_3"/>

                    <TextView
                        android:textSize="16dp"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        tools:text="123456"
                        android:textColor="@color/black"
                        android:id="@+id/dc_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_3"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:textColor="@color/white"
                android:id="@+id/dc_call"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/dc_bg2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:background="@color/blue">

                <ImageView
                    android:id="@+id/dc_delete"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@mipmap/ic_delete"
                    android:tint="@color/white"
                    android:layout_gravity="left"
                    android:padding="12dp"
                    android:layout_width="44dp"
                    android:layout_height="48dp" />

                <ImageView
                    android:id="@+id/dc_edit"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@mipmap/ic_edit"
                    android:tint="@color/white"
                    android:layout_gravity="right"
                    android:padding="12dp"
                    android:layout_width="44dp"
                    android:layout_height="48dp" />

            </FrameLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>